{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

{% liquid
	assign block_section_class = 'block-section'
	unless section.settings.color_scheme == 'background-1'
		assign block_section_class = block_section_class | append: ' block-section-padded'
	endunless

	assign card_type_class = 'card'
	if section.settings.card_type == 'card'
		assign card_type_class = 'card-standard color-background-2'
	elsif section.settings.card_type == 'overlay'
		assign card_type_class = 'card-overlay'
	elsif section.settings.card_type == 'padded'
		assign card_type_class = 'card-padded color-background-2'
	endif

	if section.settings.column_alignment == 'center'
		assign card_type_class = card_type_class | append: ' card-align-center'
	endif
%}

<style>
	#shopify-section-{{ section.id }} .block-section {
		margin-top: {{ section.settings.spacing_top | times: 0.8 | round: 0 }}px;
		margin-bottom: {{ section.settings.spacing_bottom | times: 0.8 | round: 0 }}px;
	}

	#shopify-section-{{ section.id }} .block-section-padded {
		margin-top: 0;
		margin-bottom: 0;
		padding-top: {{ section.settings.spacing_top | times: 0.8 | round: 0 }}px;
		padding-bottom: {{ section.settings.spacing_bottom | times: 0.8 | round: 0 }}px;
	}

	@media (min-width: 990px) {
		#shopify-section-{{ section.id }} .block-section {
			margin-top: {{ section.settings.spacing_top }}px;
			margin-bottom: {{ section.settings.spacing_bottom }}px;
		}

		#shopify-section-{{ section.id }} .block-section-padded {
			margin-top: 0;
			margin-bottom: 0;
			padding-top: {{ section.settings.spacing_top }}px;
			padding-bottom: {{ section.settings.spacing_bottom }}px;
		}
	}
</style>

<div class="color-{{ section.settings.color_scheme }}">
	<div class="container">
		<div class="{{ block_section_class }}">
			<div class="multicolumn">
				{% if section.settings.title != blank or section.settings.subtitle != blank %}
					<div class="block-block-section-title-wrapper">
						<div class="block-section-title-wrap">
							{% if section.settings.title != blank %}
								<h2 class="block-section-title">{{ section.settings.title }}</h2>
							{% endif %}
							{% if section.settings.subtitle != blank %}
								<p class="block-section-subtitle">{{ section.settings.subtitle }}</p>
							{% endif %}
						</div>
					</div>
				{% endif %}

				<ul class="multicolumn-list grid grid-1-col grid-2-col-tablet grid-{{ section.settings.columns }}-col-desktop" role="list">
					{%- for block in section.blocks -%}
						<li id="Card-{{ section.id }}-{{ forloop.index }}" class="grid-item" {{ block.shopify_attributes }}>
							<div class="{{ card_type_class }} {%- if block.settings.image == blank -%}multi-column-card-no-image{% endif %}">
								{%- if block.settings.image != blank -%}
									{% liquid
										assign image_size = block.settings.image_width
										assign image_size2 = block.settings.image_width | times: 2
										assign ratio = block.settings.image.aspect_ratio
										assign aspect = section.settings.image_ratio

										if aspect == 'portrait'
											assign ratio = 0.75
										elsif aspect == 'landscape'
											assign ratio = 1.77
										elsif aspect == 'square'
											assign ratio = 1
										endif

										if ratio == 0 or ratio == nil
											assign ratio = 1
										endif
									%}
									<style>#Card-{{ section.id }}-{{ forloop.index }} .card-media { width: {{ block.settings.image_width }}px; }</style>
									<div class="card-media aspect-{{ aspect }}">
										{% if ratio != 0 %}
										<div class="aspect-ratio" style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;">
										{% endif %}
											{%- capture image_sizes -%}
												{{ block.settings.image | image_url: width: image_size }} 1x, {{ block.settings.image | image_url: width: image_size2 }} 2x
											{%- endcapture -%}
											{{ block.settings.image | image_url: width: 1100 | image_tag:
												class: 'card-media-image',
												srcset: image_sizes
											}}
										{% if ratio != 0 %}
										</div>
										{% endif %}
									</div>
								{%- endif -%}

								<div class="card-info-wrap">
									<div class="card-info {% if section.settings.card_type == 'overlay' %}color-background-2{% endif %}">
										{%- if block.settings.title != blank -%}
											<h3 class="card-heading">{{ block.settings.title | escape }}</h3>
										{%- endif -%}
										{%- if block.settings.text != blank -%}
											<div class="card-caption">{{ block.settings.text }}</div>
										{%- endif -%}
										{%- if block.settings.link_label != blank -%}
											<a class="link-text-secondary"
												{% if block.settings.link == blank %}
													role="link" aria-disabled="true"
												{% else %}
													href="{{ block.settings.link }}"
												{% endif %}>
												{{ block.settings.link_label | escape }}
											</a>
										{%- endif -%}
									</div>
								</div>
							</div>
						</li>
					{%- endfor -%}
				</ul>

				{%- if section.settings.button_label != blank -%}
					<div class="center multicolumn-call-to-action">
						<a class="button"
							{% if section.settings.button_link == blank %}
								role="link" aria-disabled="true"
							{% else %}
								href="{{ section.settings.button_link }}"
							{% endif %}>
							{{ section.settings.button_label | escape }}
						</a>
					</div>
				{%- endif -%}
			</div>
		</div>
	</div>
</div>

