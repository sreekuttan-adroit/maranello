{%- unless template == 'index' or template == 'cart' or template == 'list-collections' or template == '404' or template == 'password' -%}
	{% assign separator = "&raquo;" %}

	{{ 'component-breadcrumb.css' | asset_url | stylesheet_tag }}

	<div class="breadcrumb">
		<div class="container">
			<a href="{{ routes.root_url }}">{{ 'templates.home.title' | t }}</a>
			{% case template.name %}
				{% when 'product' %}
					{% if collection.url %}
						<span>{{ separator }}</span>
						{{ collection.title | link_to: collection.url }}
					{% endif %}

					<span>{{ separator }}</span>
					{{ product.title }}
				{%- when 'page' -%}
					<span>{{ separator }}</span>
					{{ page.title }}
				{%- when 'collection' and collection.handle -%}
						<span>{{ separator }}</span>
						{{ collection.title | link_to: collection.url }}
					{%- if current_tags -%}
						<span>{{ separator }}</span>
						{%- capture tag_url -%}{{ collection.url }}/{{ current_tags | join: "+" }}{%- endcapture -%}
						<a href="{{ tag_url }}">{{ current_tags | join: " + " | replace: '-', ' ' | capitalize }}</a>
					{%- endif -%}
				{%- when 'blog' -%}
					{%- if current_tags -%}
						<span>{{ separator }}</span>
						{{ blog.title | link_to: blog.url }}

						<span>{{ separator }}</span>
						{%- capture tag_url -%}{{ blog.url }}/tagged/{{ current_tags | join: "+" }}{%- endcapture -%}
						<a href="{{ tag_url }}">{{ current_tags | join: " + " | replace: '-', ' ' | capitalize }}</a>
					{%- else -%}
						<span>{{ separator }}</span>
						{{ blog.title }}
					{%- endif -%}
				{%- when 'article' -%}
					<span>{{ separator }}</span>
					{{ blog.title | link_to: blog.url }}

					<span>{{ separator }}</span>
					{{ article.title }}
				{%- when 'search' -%}
					<span>{{ separator }}</span>
					{{ 'templates.search.title' | t }}
				{%- else -%}
					<span>{{ separator }}</span>
					{{ page_title }}
			{% endcase %}
		</div>
	</div>
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": {{ 'templates.home.title' | t | json }},
					"item": {{ shop.url | append: routes.root_url | json }}
				},
				{% case template.name %}
					{% when 'product' %}
						{% if collection.url %}
							{
								"@type": "ListItem",
								"position": 2,
								"name": {{ collection.title | json }},
								"item": {{ shop.url | append: collection.url | json }}
							},
							{
								"@type": "ListItem",
								"position": 3,
								"name": {{ product.title | json }}
							}
						{% else %}
							{
								"@type": "ListItem",
								"position": 2,
								"name": {{ product.title | json }}
							}
						{% endif %}
					{%- when 'page' -%}
						{
							"@type": "ListItem",
							"position": 2,
							"name": {{ page.title | json }}
						}
					{%- when 'collection' and collection.handle -%}
						{%- if current_tags -%}
							{
								"@type": "ListItem",
								"position": 2,
								"name": {{ collection.title | json }},
								"item": {{ shop.url | append: collection.url | json }}
							},
							{
								"@type": "ListItem",
								"position": 3,
								"name": {{ current_tags | join: " + " | replace: '-', ' ' | capitalize | json }}
							}
						{%- else -%}
							{
								"@type": "ListItem",
								"position": 2,
								"name": {{ collection.title | json }}
							}
						{%- endif -%}
					{%- when 'blog' -%}
						{%- if current_tags -%}
							{
								"@type": "ListItem",
								"position": 2,
								"name": {{ blog.title | json }},
								"item": {{ shop.url | append: blog.url | json }}
							},
							{
								"@type": "ListItem",
								"position": 3,
								"name": {{ current_tags | join: " + " | replace: '-', ' ' | capitalize | json }}
							}
						{%- else -%}
							{
								"@type": "ListItem",
								"position": 2,
								"name": {{ blog.title | json }}
							}
						{%- endif -%}
					{%- when 'article' -%}
						{
							"@type": "ListItem",
							"position": 2,
							"name": {{ blog.title | json }},
							"item": {{ shop.url | append: blog.url | json }}
						},
						{
							"@type": "ListItem",
							"position": 3,
							"name": {{ article.title | json }}
						}
					{%- when 'search' -%}
						{
							"@type": "ListItem",
							"position": 2,
							"name": {{ 'templates.search.title' | t | json }}
						}
					{%- else -%}
						{
							"@type": "ListItem",
							"position": 2,
							"name": {{ page_title | json }}
						}
				{% endcase %}
			]
		}
	</script>
{%- endunless -%}

